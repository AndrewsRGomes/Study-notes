//AULA 12 - FUNÇÕES

function soma_numeros(){
	
	var x = 5;
	var y = 2;
	var soma = x + y;
	console.log(soma);
} 

soma_numeros();


function soma_argumentos(num1,num2){
	
	var soma = num1 + num2;
	console.log(soma);
} 

soma_argumentos(20,10);


function soma_argumentos(num1,num2){
	
	var soma = num1 + num2;
	return soma;
} 

console.log("Resultado da soma" + soma_argumentos(20,30));

